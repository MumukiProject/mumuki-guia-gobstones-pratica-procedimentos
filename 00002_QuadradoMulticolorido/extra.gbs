procedure ColocarUmaDeCada() {
    Colocar(Vermelho) ; Colocar(Verde) ; Colocar(Azul) ; Colocar(Preto)
}

procedure MoverOeste3() {
    repeat(3) { Mover(Oeste) }
}

procedure ColocarLinhaMulticolorida4() {
    ColocarUmaDeCada() ; Mover(Leste)
    ColocarUmaDeCada() ; Mover(Leste)
    ColocarUmaDeCada() ; Mover(Leste)
    ColocarUmaDeCada() ; MoverOeste3()
}